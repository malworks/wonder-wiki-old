<!DOCTYPE html>
<html>
  <head>
    <title>Wonder Wiki</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css" %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

         <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

	<body>
		<div class="container2">
      <section class="header">HEADER
        <% if user_signed_in? %>
          Signed in as: <strong><%= current_user.email %></strong> |
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        <% else %>
          <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> -
          <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %>
      <% end %>
      </section>
      <section class="menu">MENU</section>
      <section class="content">
        <%= yield %>
      </section>
      <section class="footer">FOOTER</section>
    </div> <!-- end container -->
  	</body>
</html>
